;.editorconfig

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[**.ts]
e4x = true
indent_style = space
indent_size = 4
bin=node

[**.js]
e4x = true
indent_style = space
indent_size = 2
; Javascript interpreter to be invoked by default 'node'
bin=node

[**.json]
indent_style = space
indent_size = 4

[**.jsx]
e4x = true
indent_style = space
indent_size = 2

[**.css]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab

[**.html]
indent_style = space
indent_size = 4
max_char = 78
brace_style = expand
